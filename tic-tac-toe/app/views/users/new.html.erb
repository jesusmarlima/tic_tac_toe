<%if @errors %>
  <% @errors.each do |error|%>
  <%= @error %>
  <%end%>
<%end%>

<div class="new_user user_form">
<%= form_for :user, :url => users_path do |form| %>

  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>


  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit :create , class:"btn waves-effect #2979ff blue accent-3"%>
  </div>
<%end%>
</div>
